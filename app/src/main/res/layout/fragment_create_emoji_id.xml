<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_emoji_id_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <View
        android:id="@+id/create_emoji_id_white_bg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/create_emoji_id_bg"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/create_emoji_id_txt_emoji_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-100dp"
            android:alpha="0"
            android:background="@drawable/create_emoji_id_emoji_id_bg"
            android:gravity="center"
            android:letterSpacing="0.13"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:scaleX="2"
            android:scaleY="2"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/create_emoji_id_your_emoji_id_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/create_emoji_id_your_emoji_id_text_label_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="AVENIR_LT_STD_LIGHT" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/create_emoji_id_your_emoji_id_text_label_2"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="AVENIR_LT_STD_BLACK" />

        </LinearLayout>

        <View
            android:id="@+id/create_emoji_id_your_emoji_title_back_view"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/create_emoji_id_bg"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/create_emoji_id_main_img_small_gem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="18dp"
            android:contentDescription="@null"
            android:src="@drawable/splash_gem_small"
            android:tint="@color/black"
            android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/create_emoji_id_emoji_wheel_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:lottie_autoPlay="false"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_imageAssetsFolder="create_emoji_id/images/"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/emoji_wheel" />

        <RelativeLayout
            android:id="@+id/create_emoji_id_wallet_creation_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/create_emoji_id_txt_hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@color/create_emoji_id_bg"
                android:gravity="center"
                android:text="@string/create_emoji_id_hello_friend_label"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible"
                app:customFont="AVENIR_LT_STD_BLACK" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/create_emoji_id_txt_just_sec_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center"
                android:text="@string/create_emoji_id_just_a_sec_label"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible"
                app:customFont="AVENIR_LT_STD_BLACK" />

            <View
                android:id="@+id/create_emoji_id_hello_text_back_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@color/create_emoji_id_bg"
                android:visibility="invisible" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/create_emoji_id_txt_just_sec_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_emoji_id_txt_just_sec_title"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/create_emoji_id_just_sec_desc_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible"
                app:customFont="AVENIR_LT_STD_ROMAN" />

            <View
                android:id="@+id/create_emoji_id_just_sec_back_view"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/create_emoji_id_txt_just_sec_title"
                android:layout_gravity="center"
                android:background="@color/create_emoji_id_bg"
                android:visibility="invisible" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/create_emoji_id_txt_wallet_address_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_emoji_id_txt_create_your_emoji_id"
                android:layout_gravity="center"
                android:alpha="0"
                android:gravity="center"
                android:lineSpacingExtra="12dp"
                android:text="@string/create_emoji_id_wallet_address_desc"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:visibility="visible"
                app:customFont="AVENIR_LT_STD_MEDIUM" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/create_emoji_id_nerd_face_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:alpha="0"
                app:lottie_autoPlay="false"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_imageAssetsFolder="nerd_emoji/images/"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/nerd_emoji" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/create_emoji_id_txt_awesome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/create_emoji_id_awesome"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible"
                app:customFont="AVENIR_LT_STD_BLACK" />

            <View
                android:id="@+id/create_emoji_id_awesome_text_back_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/create_emoji_id_bg"
                android:visibility="invisible" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/create_emoji_id_txt_create_your_emoji_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_emoji_id_txt_awesome"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="@string/create_emoji_id_now_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible"
                app:customFont="AVENIR_LT_STD_ROMAN" />

            <View
                android:id="@+id/create_emoji_id_text_back_view"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@id/create_emoji_id_txt_awesome"
                android:layout_gravity="center"
                android:background="@color/create_emoji_id_bg"
                android:visibility="invisible" />

        </RelativeLayout>

        <com.tari.android.wallet.ui.component.CustomFontButton
            android:id="@+id/create_emoji_id_btn_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_action_button_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="-54dp"
            android:background="@drawable/gradient_button_bg"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/common_continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:customFont="AVENIR_LT_STD_HEAVY" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/create_emoji_id_checkmark_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/check_mark" />

        <com.tari.android.wallet.ui.component.CustomFontButton
            android:id="@+id/create_emoji_id_btn_create_emoji_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_action_button_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="-54dp"
            android:background="@drawable/gradient_button_bg"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/create_emoji_id_continue_and_create_emoji_id"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:customFont="AVENIR_LT_STD_HEAVY" />

    </RelativeLayout>
</FrameLayout>