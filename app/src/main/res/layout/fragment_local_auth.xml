<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/local_auth_vw_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/local_auth_vw_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/local_auth_img_small_gem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="18dp"
            android:alpha="0"
            android:contentDescription="@null"
            android:src="@drawable/splash_gem_small"
            android:tint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/local_auth_img_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/local_auth_img_small_gem"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:alpha="0"
            android:contentDescription="@null"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/fingerprint" />

        <LinearLayout
            android:id="@+id/local_auth_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/local_auth_img_auth"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/auth_prompt_touch_id_title_text_label_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="AVENIR_LT_STD_LIGHT" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/local_auth_txt_title_auth_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/auth_prompt_touch_id"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="AVENIR_LT_STD_BLACK" />
        </LinearLayout>

        <View
            android:id="@+id/create_emoji_id_awesome_text_back_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/local_auth_img_auth"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/create_emoji_id_bg"
            android:visibility="visible" />

        <com.tari.android.wallet.ui.component.CustomFontTextView
            android:id="@+id/local_auth_txt_auth_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/local_auth_title_container"
            android:layout_gravity="center"
            android:alpha="0"
            android:gravity="center"
            android:lineSpacingExtra="12dp"
            android:text="@string/auth_prompt_touch_id_desc"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:visibility="visible"
            app:customFont="AVENIR_LT_STD_MEDIUM" />

        <com.tari.android.wallet.ui.component.CustomFontButton
            android:id="@+id/local_auth_btn_enable_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="-54dp"
            android:alpha="0"
            android:background="@drawable/gradient_button_bg"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/auth_prompt_button_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:customFont="AVENIR_LT_STD_HEAVY" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/local_auth_vw_auth_success_anim_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/local_auth_vw_auth_success_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/auth_touch_id_prompt_black_bg" />

        <RelativeLayout
            android:id="@+id/local_auth_vw_auth_success"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:background="@drawable/local_auth_face_id_anim_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/local_auth_img_auth_success_auth_type_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fingerprint" />

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/local_auth_prompt_auth_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/local_auth_img_auth_success_auth_type_image"
                android:gravity="center"
                android:text="@string/auth_prompt_touch_id"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:customFont="AVENIR_NEXT_LT_PRO_REGULAR" />
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>