<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.activity.MainActivity">

    <!-- Lottie animation for Tari Wallet text -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/main_anim_tari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black"
        app:lottie_autoPlay="false"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/splash_anim" />

    <!-- the big gem to disappear -->
    <ImageView
        android:id="@+id/main_img_big_gem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:contentDescription="@null"
        android:src="@drawable/splash_gem_big" />

    <!-- subtitle -->
    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/main_txt_testnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@color/black"
        android:text="@string/testnet"
        android:textColor="#c9c9c9"
        android:textSize="9sp"
        app:customFont="AVENIR_LT_STD_HEAVY" />

    <!-- small gem -->
    <ImageView
        android:id="@+id/main_img_small_gem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_txt_testnet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@color/black"
        android:contentDescription="@null"
        android:src="@drawable/splash_gem_small" />


</RelativeLayout>